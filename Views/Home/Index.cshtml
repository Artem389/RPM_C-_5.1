@using System.Security.Claims
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @if (User.Identity.IsAuthenticated)
    {
        <p>Вы вошли как: @User.Identity.Name (Роль: @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value)</p>
        <form asp-controller="Home" asp-action="LogOut" method="post">
            <button type="submit" class="btn btn-danger">Выйти</button>
        </form>
    }
    else
    {
        <a asp-controller="Home" asp-action="SignIn" class="btn btn-primary">Войти</a>
        <a asp-controller="Home" asp-action="SignUp" class="btn btn-secondary">Зарегистрироваться</a>
    }
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="container mt-4">
        <h2>Меню</h2>
        <ul class="list-group">
            @if (User.IsInRole("Staff"))
            {
                <!-- Полный доступ для администраторов -->
                <li class="list-group-item">
                    <a asp-controller="Adresses" asp-action="Index">Адреса (полный доступ)</a>
                </li>
                <li class="list-group-item">
                    <a asp-controller="Applications" asp-action="Index">Заявки (полный доступ)</a>
                </li>
